<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Avalonia.ListBoxAnimation.Samples.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Avalonia.ListBoxAnimation.Samples.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Avalonia.ListBoxAnimation.Samples.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Avalonia.ListBoxAnimation.Samples">
    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <views:EnhancedListBox ItemsSource="{Binding Items}" />
</Window>